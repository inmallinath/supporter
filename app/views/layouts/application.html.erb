<!DOCTYPE html>
<html>
<head>
  <title>SupportApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <img src="/assets/support_app1.png" alt="The Supporter Web Application"/>
  <h1 style="display:inline; margin: 0 auto" >Support Request Logger</h1>
  <hr />
</head>
<body>
<%= link_to "New Request", new_agent_path%>
<%= link_to "All Requests", agents_path%>
<%= notice || alert %>
<div style="float:right;">
<%= form_tag(agents_path, :method => "get") do %>
  <div>
    <%= text_field_tag :search, params[:search], placeholder: "Search" %>
    <button class="btn" type="submit">&#128269;</button>
  </div>
<% end %>
</div>

<%= yield %>

</body>
</html>
